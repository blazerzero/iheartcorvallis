<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="edu.oregonstate.studentlife.ihcv2.LoginPageActivity"
    android:weightSum="1"
    android:gravity="center">

    <!--<ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp" />-->

    <Button
        android:id="@+id/btn_student"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.13"
        android:background="#ffffff"
        android:drawablePadding="-20dp"
        android:paddingLeft="10dp"
        android:text="Student Log In"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_resident"
        android:paddingLeft="10dp"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:layout_weight="0.13"
        android:text="Resident Log In"
        android:textSize="16sp"
        android:background="#ffffff"
        android:drawablePadding="-20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_student"
        android:layout_alignLeft="@+id/btn_student"
        android:layout_alignStart="@+id/btn_student" />

</RelativeLayout>


