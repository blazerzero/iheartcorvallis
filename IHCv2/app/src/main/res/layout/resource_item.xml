<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/resource_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_resource"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/corvallis_aerial"/>

            <TextView
                android:id="@+id/tv_resource_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_cv_elem_height"
                android:layout_below="@+id/iv_resource"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="start|center_vertical"
                android:lines="2"/>

            <TextView
                android:id="@+id/tv_resource_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_cv_elem_height"
                android:layout_below="@+id/tv_resource_title"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="start|center_vertical"
                android:lines="5"/>

            <TextView
                android:id="@+id/tv_resource_link"
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_cv_elem_height"
                android:layout_below="@+id/tv_resource_description"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="start|center_vertical"
                android:lines="1"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

