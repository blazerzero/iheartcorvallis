<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.oregonstate.studentlife.ihcv2.SplashActivity">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_aerial"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mu_sunset"/>

        <ImageView
            android:id="@+id/iv_ihc"
            android:layout_alignBottom="@+id/iv_aerial"
            android:layout_alignStart="@+id/iv_aerial"
            android:layout_alignEnd="@+id/iv_aerial"
            android:layout_alignTop="@+id/iv_aerial"
            android:padding="100dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/osu_icon_heart_02"/>

    </RelativeLayout>


</RelativeLayout>
